<% provide(:title, "Top") %>
<div class="container">
  
  <div class="row">
    <div class="col-md-7">
      <div class="center jumbotron">
      <h1>TaskApp</h1>
      
      <center>
        <p>
          TaskAppは簡易ToDo管理ツールです。
        </p>
      </center>
      
      <center>
        <p>↓↓初めてのご利用↓↓</p>
      </center>
      
      <center>
         <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success" %>
      </center>
      </div>
    </div>
    
    <div class="col-md-4">
      <h2>ログイン</h2>
      
        <%= form_with(scope: :session, url:login_path, local: true) do |f| %>
        
          <%= f.label :メールアドレス, class: "label-login" %>
          <%= f.email_field :email, class: 'form-control' %>
          
          <%= f.label :パスワード, class: "label-login" %>
          <%= f.password_field :password, class: 'form-control' %>
        
          
          <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember_me" do %>
          <%= f.check_box :remember_me, id: "remember_me" %>
          <span>ログイン情報を記憶する</span>
        <% end %> 
        
         <% if current_user %>
          <%= f.submit "ログイン状態です", class: "btn btn-primary btn-block btn-login disabled" %>
        
         <% else %>        
          <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-login" %>
      <% end %>
    <% end %>
    </div>
  </div>
 </div>

