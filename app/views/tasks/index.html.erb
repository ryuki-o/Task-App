<% provide(:title, "Task") %>
<div class="container">
<h1><%= @user.name %>のタスク一覧</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1"></div>
    <%= link_to "タスク新規作成", new_user_task_path(current_user), class: "btn btn-lg btn-primary pull-right" %>
    <table class="table table-hover" id="table-tasks">
      <thead>
        <tr>
          <th><%= Task.human_attribute_name :名称 %></th>
          <th><%= Task.human_attribute_name :作成日 %></th>
          <th></th>
        </tr>
      </thead>
     
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.created_at %></td>
            <td><%= link_to "編集", edit_user_task_path(@user, task), class: "btn btn-lg btn-success" %></td>
            <td><%= link_to "削除", user_task_path(@user, task), method: :delete,
               data: { confirm: "「#{task.name}」を削除します。よろしいですか？" }, class: "btn btn-lg btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
